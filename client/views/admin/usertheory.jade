template(name="ListTheory")
  h3 User Theory List
  div.success.alert.alert-success
   label Theory approved successfully
  div.delete.alert.alert-success
   label Theory deleted successfully
  table.table.table-bordered
    thead
      tr
        th Theory Title
        th Theory Description
        th Theory Creation Date
        th Username
        th Action
    tbody
      each theory
        tr
          td {{title}}
          td {{desc}}
          td {{format createdAt}}
          td {{username}}
          td
            if buttonCheck approved false
              button.btn.btn-success.approve_hint(type='button' value=_id)
                i.fa.fa-check.check
            button.btn.btn-danger.delete_hint(type='button' value=_id)
              i.fa.fa-trash-o.check
